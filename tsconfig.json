{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "lib": ["es2017"],
    "strict": true,
    "noImplicitAny": true,
    "diagnostics": false,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "pretty": true,
    "incremental": true,
    "outDir": "./build",
    "baseUrl": "src"
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": ["*.swp", "./dist/**/*", "/node_modules/**/*"]
}

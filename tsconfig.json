{
  "compilerOptions": {
    "baseUrl": "src",
    "diagnostics": false,
    "lib": [
      "es2017",
      "dom",
    ],
    "esModuleInterop": true,
    "incremental": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noImplicitReturns": false,
    "noUnusedLocals": true,
    "outDir": "./build",
    "pretty": true,
    "strict": true,
    "strictNullChecks":false,
    "target": "es2017",
    "useUnknownInCatchVariables": false
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": ["*.swp", "./dist/**/*", "/node_modules/**/*"]
}
